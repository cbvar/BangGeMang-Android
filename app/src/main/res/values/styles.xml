<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- 配置Android提供的theme -->
        <item name="android:textAppearanceListItem">@style/TextAppearanceListItem</item>
        <item name="android:textAppearanceListItemSmall">@style/TextAppearanceListItemSmall</item>
        <item name="android:listPreferredItemHeight">?attr/qmui_list_item_height_higher</item>
        <item name="android:listPreferredItemHeightSmall">?attr/qmui_list_item_height</item>

        <!-- 配置qmui提供的theme -->
        <item name="QMUITopBarStyle">@style/TopBar</item>

        <!-- 配置app自己的theme -->
        <item name="app_primary_color">?attr/qmui_config_color_blue</item>
        <item name="app_content_bg_color">@color/qmui_config_color_white</item>
        <item name="app_double_list_first_bg_color">@color/qmui_config_color_white</item>
        <item name="app_double_list_second_bg_color">@color/app_config_color_gray_10</item>
    </style>

    <style name="TextAppearanceListItem">
        <item name="android:textColor">?attr/qmui_config_color_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearanceListItemSmall">
        <item name="android:textColor">?attr/qmui_config_color_gray_4</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">?attr/app_primary_color</item>
        <item name="qmui_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_height">48dp</item>
        <item name="qmui_topbar_image_btn_height">48dp</item>
        <item name="qmui_topbar_title_text_size">21sp</item>
    </style>

    <style name="FormItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">147px</item>
        <item name="android:paddingLeft">42px</item>
        <item name="android:paddingRight">42px</item>
        <item name="android:background">@drawable/qmui_s_list_item_bg_with_border_double</item>
    </style>

    <style name="FormItemRequired">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:textColor">@color/qmui_config_color_red</item>
        <item name="android:textSize">?attr/qmui_common_list_item_title_h_text_size</item>
        <item name="android:text">*</item>
    </style>

    <style name="FormItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/qmui_config_color_gray_1</item>
        <item name="android:textSize">?attr/qmui_common_list_item_title_h_text_size</item>
    </style>

    <style name="FormItemSpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FormItemEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingRight">10px</item>
        <item name="android:paddingTop">26px</item>
        <item name="android:paddingBottom">29px</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/qmui_config_color_gray_1</item>
        <item name="android:textSize">?attr/qmui_common_list_item_title_h_text_size</item>
        <item name="android:textColorHint">?attr/qmui_config_color_gray_5</item>
    </style>

    <style name="FormItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
